{
  "name": "local-service",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "license": "MIT",
  "scripts": {
    "start": "ts-node -r tsconfig-paths/register src/main.ts & webpack --watch --mode=development --progress --devtool '#source-map'",
    "start:dev": "tsc-watch -p tsconfig.build.json --onSuccess \"node dist/main.js\" & webpack --watch --mode=development --progress --devtool '#source-map'",
    "start:debug": "tsc-watch -p tsconfig.build.json --onSuccess \"node --inspect-brk dist/main.js\" & webpack --watch --mode=development --progress --devtool '#source-map'",
    "start:prod": "node dist/main.js && webpack -p --mode=production",
    "lint": "tslint -p tsconfig.json -c tslint.json",
    "test": "jest",
    "test:front": "webpack --watch --mode=development --progress --devtool '#source-map'",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "build": "webpack -p --mode=production",
    "build:server": "rimraf dist && tsc -p tsconfig.build.json && webpack -p --mode=production",
    "format": "prettier --write \"src/**/*.ts\"",
    "clean": "rm -rf static/dist dist"
  },
  "dependencies": {
    "@babel/polyfill": "^7.0.0",
    "@nestjs/common": "^6.0.0",
    "@nestjs/core": "^6.0.0",
    "@nestjs/platform-express": "^6.0.0",
    "axios": "^0.19.0",
    "reflect-metadata": "^0.1.12",
    "rimraf": "^2.6.2",
    "rxjs": "^6.3.3",
    "vue": "^2.6.10",
    "vue-class-component": "^7.1.0",
    "vue-property-decorator": "^8.2.2",
    "vue-meta": "^2.2.2",
    "vue-router": "^3.1.3",
    "vuex": "^3.1.1"
  },
  "devDependencies": {
    "@babel/cli": "^7.5.5",
    "@babel/core": "^7.5.5",
    "@babel/plugin-proposal-optional-chaining": "^7.2.0",
    "@babel/plugin-transform-async-to-generator": "^7.5.0",
    "@babel/plugin-transform-runtime": "^7.5.5",
    "@babel/preset-env": "^7.5.5",
    "@babel/register": "^7.5.5",
    "@nestjs/testing": "^6.0.0",
    "@types/express": "4.16.1",
    "@types/jest": "24.0.11",
    "@types/node": "11.13.4",
    "@types/supertest": "2.0.7",
    "@vue/cli-plugin-babel": "^3.11.0",
    "@vue/cli-plugin-typescript": "^3.11.0",
    "autoprefixer": "^9.6.1",
    "babel-eslint": "^10.0.3",
    "babel-loader": "^8.0.2",
    "css-loader": "^0.28.11",
    "ejs": "^2.7.1",
    "eslint": "^3.18.0",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-vue": "^5.2.3",
    "file-loader": "^4.2.0",
    "happypack": "^5.0.1",
    "jest": "24.7.1",
    "less-loader": "^5.0.0",
    "less-middleware": "^3.1.0",
    "mini-css-extract-plugin": "^0.8.0",
    "object-assign": "^4.1.1",
    "postcss": "^7.0.17",
    "postcss-loader": "^3.0.0",
    "postcss-px-to-viewport": "^1.1.1",
    "style-loader": "^1.0.0",
    "supertest": "4.0.2",
    "ts-jest": "24.0.2",
    "ts-loader": "^6.0.4",
    "ts-node": "8.1.0",
    "tsc-watch": "2.2.1",
    "tsconfig-paths": "3.8.0",
    "tslint": "5.16.0",
    "typescript": "3.4.3",
    "vue-loader": "^15.7.1",
    "vue-template-compiler": "^2.6.10",
    "webpack": "^4.39.3",
    "webpack-cli": "^3.3.7"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node",
    "browserslist": [
      "Android >= 4.0",
      "iOS >= 7.0"
    ]
  }
}
