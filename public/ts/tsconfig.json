{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "strict": true,
    "jsx": "preserve",
    "importHelpers": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "baseUrl": ".",
    "types": [
      "shims-vue.d.ts"
    ],
    "paths": {
      "@/*": [
        "./*"
      ],
      "$root/*": [
        "../../*"
      ]
    },
    "lib": [
      "esnext",
      "dom",
      "dom.iterable"
    ]
  },
  "include": [
    "components/**/*.ts",
    "utils/**/*.ts",
    "pages/**/*.vue",
    "pages/**/*.ts",
    "../../project.config.json"
  ],
  "exclude": [
    "node_modules"
  ]
}
