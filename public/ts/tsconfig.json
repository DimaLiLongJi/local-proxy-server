{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "strict": true,
    "jsx": "preserve",
    "importHelpers": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "baseUrl": ".",
    "types": [
      "shims-vue.d.ts",
      "shims-tsx.d.ts"
    ],
    "paths": {
      "@/*": [
        "./*"
      ]
    },
    "lib": [
      "esnext",
      "dom",
      "dom.iterable"
    ]
  },
  // "include": [
  //   "components/**/*.ts",
  //   "utils/**/*.ts",
  //   "pages/**/*.vue",
  //   "pages/**/*.ts"
  // ],
  "exclude": [
    "node_modules"
  ]
}
